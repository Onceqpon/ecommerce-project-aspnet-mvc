@using ProjektASPNET.Data.ViewModel

@model NewManufacturerVM

@{
    ViewData["Title"] = "Edytuj Producenta";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edytuj Producenta</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="post">
                    @* Dodaj atrybuty "asp-controller" i "asp-route-id" aby przekierować do odpowiedniej akcji "Edit" z identyfikatorem producenta *@
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info square" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyLogoURL" class="control-label"></label>
                        <input asp-for="CompanyLogoURL" class="form-control" />
                        <span asp-validation-for="CompanyLogoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edytuj" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Pokaż Wszystkich</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#CompanyLogoURL").val();
        })

        $("#CompanyLogoURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })

    </script>
}
